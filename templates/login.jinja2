{%set page = "login"%}

{% include 'snippets/header.jinja2'%}
<link rel="stylesheet" href="static/login.css">

    <center>
        
        <form action="/login{{url_to}}" method="post">
            <div id="loginForm" style="  margin: 0;
                                        position: absolute;
                                        top: 50%;
                                        left: 50%;
                                        -ms-transform: translate(-50%, -50%);
                                        transform: translate(-50%, -50%);" class="border rounded-3 container">
                <div class="row">
                    <div class="col" style="background-color: #90ee90;">
                    <div style="height: 25%"></div>
                        <h1 style="color: #000000">Login</h1>
                        <div style="height: 25%"></div>
                    </div>
                </div>
                <div class="row">                
                    <div class="col border">
                        <div style="height: 25%"></div>
                        <input type="text" id="inp" name="uName" placeholder="Username"/>
                        <div style="height: 25%"></div>
                    </div>
                </div>
                <div class="row">                    
                    <div class="col border">
                        <div style="height: 25%"></div>
                        <input type="password" id="inp" name="psw" placeholder="Password"/>
                        <div style="height: 25%"></div>
                    </div>
                </div>
                <div class="row border">
                    <div class="col">
                        <div style="height: 25%"></div>

                        <div class = "row">
                            <div class="col">
                                <button type="submit" class="btn btn-success" style="align: right;">Sign in</button>
                            </div>
                            <div class="col">
                                <div style="height: 25%"></div>
                                <input class="" type="checkbox" id="remember">
                                <label class="" id="remember" for="remember">Remember</label>
                            </div>
                            <center>
                            <div class="" style="margin: 10px; color: red; width: auto;">
                                <label >{{message}}</label>
                            </div>
                            </center>
                        </div>
                    </div>
                </div>
                
            </div>
        </form>

    </center>

